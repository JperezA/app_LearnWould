<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanco"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Uses" >

    <Button
        android:id="@+id/calificaruse2"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="32dp"
        android:background="@color/inicioletramenu"
        android:text="@string/check"
        android:textColor="@color/blanco" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textowouldejer"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imause1"
            android:layout_width="@dimen/progresoancho"
            android:layout_height="@dimen/progresoancho"
            android:layout_marginLeft="17dp"
            android:src="@drawable/progreso2" />

        <ImageView
            android:id="@+id/imause2"
            android:layout_width="@dimen/progresoancho"
            android:layout_height="@dimen/progresoancho"
            android:layout_marginLeft="17dp"
            android:src="@drawable/progreso2" />

        <ImageView
            android:id="@+id/imause3"
            android:layout_width="@dimen/progresoancho"
            android:layout_height="@dimen/progresoancho"
            android:layout_marginLeft="17dp"
            android:src="@drawable/progreso2" />
        <ImageView
            android:id="@+id/imause4"
            android:layout_width="@dimen/progresoancho"
            android:layout_height="@dimen/progresoancho"
            android:layout_marginLeft="17dp"
            android:src="@drawable/progreso2" />
        <ImageView
            android:id="@+id/imause5"
            android:layout_width="@dimen/progresoancho"
            android:layout_height="@dimen/progresoancho"
            android:layout_marginLeft="17dp"
            android:src="@drawable/progreso2" />
        <ImageView
            android:id="@+id/imause6"
            android:layout_width="@dimen/progresoancho"
            android:layout_height="@dimen/progresoancho"
            android:layout_marginLeft="17dp"
            android:src="@drawable/progreso2" />
        <ImageView
            android:id="@+id/imause7"
            android:layout_width="@dimen/progresoancho"
            android:layout_height="@dimen/progresoancho"
            android:layout_marginLeft="17dp"
            android:src="@drawable/progreso1" />
        <ImageView
            android:id="@+id/imause8"
            android:layout_width="@dimen/progresoancho"
            android:layout_height="@dimen/progresoancho"
            android:layout_marginLeft="17dp"
            android:src="@drawable/progreso1" />
    </LinearLayout>

    <TextView
        android:id="@+id/text2use"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text"
        android:layout_below="@+id/text"
        android:layout_marginTop="25dp"
        android:background="@color/menuuses"
        android:gravity="center"
        android:text="She would find it easy"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/blanco" />

    <TextView
        android:id="@+id/text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="36dp"
        android:background="@color/blanco"
        android:gravity="center"
        android:text="negative questions with contractions"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/tranparente" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text2use"
        android:layout_centerVertical="true" >

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="You would be coming with us, wouldn&apos;t you?"
            android:textColor="@color/tranparente" />

        <RadioButton
            android:id="@+id/radio2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wouldn&apos;t you be coming with us? "
            android:textColor="@color/tranparente" />

        <RadioButton
            android:id="@+id/radio3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wouldn&apos;t she find it easy?"
            android:textColor="@color/tranparente" />

    </RadioGroup>

</RelativeLayout>